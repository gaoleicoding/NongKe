<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.nongke.jindao.base.view.TitleView
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/help_feedback_layout"
        style="@style/user_info_layout">

        <ImageView
            style="@style/user_info_icon"
            android:src="@drawable/icon_help_feedback2" />

        <TextView
            style="@style/user_info_txt"
            android:text="@string/help_feedback" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/version_update_layout"
        style="@style/user_info_layout">

        <ImageView
            style="@style/user_info_icon"
            android:src="@drawable/icon_update" />

        <TextView
            style="@style/user_info_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="版本更新" />

        <TextView
            android:id="@+id/tv_versionName"
            style="@style/user_info_txt"
            android:textColor="@color/color_9b9b9b" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/my_logout_layout"
        style="@style/user_info_layout"
        android:layout_marginTop="10dp">

        <ImageView
            style="@style/user_info_icon"
            android:src="@drawable/icon_my_logout" />

        <TextView
            style="@style/user_info_txt"
            android:text="@string/my_logout" />
    </LinearLayout>
</LinearLayout>
